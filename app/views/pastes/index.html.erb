<p id="notice" class="alert"><%= notice %></p>

<h1><span class="label label-default">Listing Pastes</span></h1>

<table class="table ">
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pastes.each do |paste| %>
      <tr>
        <td>Anonymous</td>
        <td><%= link_to '', paste, class: "glyphicon glyphicon-zoom-in", :title => "Show" %></td>
        <td><%= link_to '', edit_paste_path(paste), class: "glyphicon glyphicon-pencil", :title => "Edit" %></td>
        <td><%= link_to '', paste, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove", :title => "Remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paste', new_paste_path, class: "btn btn-default" %>
